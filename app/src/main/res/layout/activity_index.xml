<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" >

    <!--tabbar 1.主页-->
    <!--导航栏-->
    <TableLayout
        android:id="@+id/pay_selectMethod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        >
        <TableRow>
        <TextView
            android:id="@+id/current_address"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="天津市"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            />
            <ImageView
                android:id="@+id/search_address"
                android:layout_weight="1"
                android:layout_height="44dp"
                android:src="@drawable/search1"
                />
            <ImageView
                android:id="@+id/image_chat"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/i_chat"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                />
        </TableRow>
    </TableLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableLayout
            android:id="@+id/tabLayout" xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
    <!--轮播图-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <!--存放图片的ViewPager-->
        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>
    <!--8个按钮-->
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        >
        <TableRow  >
            <ImageButton
                android:id="@+id/imgBtn1"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="#FCFCFC"
                android:src="@drawable/i_zvw"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />

            <ImageButton
                android:id="@+id/imgBtn2"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FCFCFC"
                android:src="@drawable/i_cwyy"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <ImageButton
                android:id="@+id/imgBtn3"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="#FCFCFC"
                android:src="@drawable/i_gxcw"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />
            <ImageButton
                android:id="@+id/imgBtn8"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="#FCFCFC"
                android:src="@drawable/i_gd"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
        </TableRow>

    </TableLayout>
    <!--横线-->
    <!--横线-->
    <View  android:layout_height="2px"
        android:layout_width="match_parent"
        android:background="#BFBFBF"
        />
        <!--下划视图-->

<!--登录状态-->
<TableRow android:id="@+id/tabLogin"  android:layout_weight="1"
    android:layout_height="100dp"
    android:background="@drawable/i_login">

    <TextView
        android:id="@+id/login_status"
        android:layout_weight="1"
        android:layout_height="40dp"
        android:text="登录状态"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="130dp"
        />
</TableRow>
                <View  android:layout_height="2px"
                    android:layout_width="match_parent"
                    android:background="#BFBFBF"
                    />
        <!--附近停车场-->

  <TextView
    android:id="@+id/nearPark"
      android:layout_weight="1"
      android:layout_height="100dp"
      android:text="查看附近停车场"
      android:gravity="center"
      android:background="@drawable/i_mapbj"
    />

                 <View  android:layout_height="5px"
                    android:layout_width="match_parent"
                    android:background="#BFBFBF"
                    />

        <!--车生活-->
        <TableRow android:layout_weight="1"
            android:paddingLeft="0dp">
            <ImageButton
                android:id="@+id/i_csh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FCFCFC"
                android:src="@drawable/i_csh"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
        </TableRow>
                <View  android:layout_height="2px"
                    android:layout_width="match_parent"
                    android:background="#BFBFBF"
                    />
        <!--车生活具体-->
        <TableLayout
            android:id="@+id/tabLayout2" xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TableRow  >
                <ImageButton
                    android:id="@+id/csh1"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="#FCFCFC"
                    android:src="@drawable/csh2"
                    android:layout_marginTop="10dp"

                    android:layout_marginBottom="10dp"
                    />

                <ImageButton
                    android:id="@+id/csh2"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#FCFCFC"
                    android:src="@drawable/csh"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

                <ImageButton
                    android:id="@+id/csh3"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="#FCFCFC"
                    android:src="@drawable/csh12"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    />
                <ImageButton
                    android:id="@+id/csh4"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="#FCFCFC"
                    android:src="@drawable/csh7"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>
            </TableRow>
            <TableRow  >
                <ImageButton
                    android:id="@+id/csh5"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="#FCFCFC"
                    android:src="@drawable/csh5"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    />

                <ImageButton
                    android:id="@+id/csh6"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#FCFCFC"
                    android:src="@drawable/csh9"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

                <ImageButton
                    android:id="@+id/csh7"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="#FCFCFC"
                    android:src="@drawable/csh10"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    />
                <ImageButton
                    android:id="@+id/csh8"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="#FCFCFC"
                android:src="@drawable/csh11"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>
            </TableRow>


        </TableLayout>

                <TextView
                    android:id="@+id/bluePark_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:textAlignment="center"
                    android:background="@color/gray"
                    android:textSize="8dp"
                    android:text="天津停车  智能的停车平台"
                    />
        </TableLayout>
</ScrollView>


</LinearLayout>
