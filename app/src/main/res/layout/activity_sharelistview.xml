<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--我的共享车位listview具体样式-->
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_span="3">
        <TableRow
            android:background="#E6ECE8">
            <!--发布时间-->
            <TextView
            android:id="@+id/FBSJ"
                android:layout_span="3"
            android:layout_weight="1"
                android:background="#E6ECE8"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="发布时间"
                android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            />
            </TableRow>
            <TableRow>
                <!--停车场名称-->
            <TextView
            android:id="@+id/TCCMG"
                android:layout_span="2"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="停车场名称"
                android:textSize="17dp"
            android:layout_marginLeft="5dp"
            />
                <Button
                    android:id="@+id/SRMX"
                    android:layout_span="1"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:textColor="@color/white"
                    android:text="收入明细"
                    />
            </TableRow>
        <TableRow>
            <!--车位号-->
            <TextView
                android:id="@+id/text3"
                android:layout_span="1"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="车位号: "
                android:layout_marginLeft="5dp"
                />
            <TextView
                android:id="@+id/CWH"
                android:layout_span="1"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="车位号"
                android:layout_marginLeft="5dp"
                />
            <TextView
                android:id="@+id/DQZT"
                android:layout_span="1"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="当前状态"
                android:layout_marginLeft="5dp"
                />
        </TableRow>
        <TableRow>
            <!--开放时间-->
            <TextView
                android:id="@+id/text4"
                android:layout_span="1"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="开放时间: "
                android:layout_marginLeft="5dp"
                />
            <TextView
                android:id="@+id/KSSJ"
                android:layout_span="1"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="开始时间"
                android:layout_marginLeft="5dp"
                />
            <TextView
                android:id="@+id/JSSJ"
                android:layout_span="1"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="结束时间"
                android:layout_marginLeft="5dp"
                />
        </TableRow>
        <TableRow>
            <!--共享模式-->
            <TextView
                android:id="@+id/text5"

                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="共享模式"
                android:layout_marginLeft="5dp"
                />
            <TextView
                android:id="@+id/GXMS"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="具体模式"
                android:layout_marginLeft="5dp"
                />
        </TableRow>
        <TableRow>
            <!--费用-->
            <TextView
                android:id="@+id/text6"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="费用"
                android:layout_marginLeft="5dp"
                />
            <TextView
                android:id="@+id/GTFY"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="具体费用"
                android:layout_marginLeft="5dp"
                />
            <Button
                android:id="@+id/ZT"
                android:layout_weight="0.5"
                android:layout_height="40dp"
                android:text="状态"
                />
            <Button
                android:id="@+id/BJ"
                android:layout_weight="0.5"
                android:layout_height="40dp"
                android:text="编辑"
                />
        </TableRow>


    </TableLayout>
</LinearLayout>


